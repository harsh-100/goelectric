      <p>
       📞  <%= post.phone %>
      </p>
      <span class="color-success">
         Verified ✔
      </span>
      <span class="color-primary">
         Trusted 💙
      </span>
      </div>
      <div>
      <p>
         Rating : ⭐⭐⭐⭐
      </p>
      <a href="/post/<%= post.name %>" class="btn btn-success btn-lg">Read More ></a>
      </div>
   </div>
 <%})%>
 
</div>

    <%- include('partials/footer')%>
